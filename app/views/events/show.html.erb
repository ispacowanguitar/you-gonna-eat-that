<h1>Sign up for </h1>
<p><%= @event.title %> </p>

<div> 
<%= form_tag '/eaters', method: :post do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>
  </div>
  <div>
    <%= label_tag :last_name  %>
    <%= text_field_tag :last_name  %>
  </div>
  <div>
    <%= label_tag :email  %>
    <%= text_field_tag :email  %>
  </div>
  <div>
    <%= submit_tag "Add me" %>
  </div>
  <a href = "/events/"><p> cancel </p></a>
<% end %>


</div>